<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/singleMovieItem"
        android:layout_width="222dp"
        android:layout_height="66dp"
        android:layout_marginEnd="76dp"
        android:text="Movie1"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/myFavoriteMovieImage"
        app:layout_constraintTop_toTopOf="@+id/myFavoriteMovieImage" />

    <ImageView
        android:id="@+id/myFavoriteMovieImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/starImageView"
        android:layout_width="52dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="@+id/singleMovieItem"
        app:layout_constraintStart_toEndOf="@+id/singleMovieItem"
        app:layout_constraintTop_toTopOf="@+id/singleMovieItem"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>