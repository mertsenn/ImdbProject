<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/castImage"
        android:layout_width="120dp"
        android:layout_height="164dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/myCastName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/castImage"
        app:layout_constraintStart_toStartOf="@+id/castImage"
        app:layout_constraintTop_toBottomOf="@+id/castImage" />

    <TextView
        android:id="@+id/myCastCharName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/myCastName"
        app:layout_constraintStart_toStartOf="@+id/myCastName"
        app:layout_constraintTop_toBottomOf="@+id/myCastName" />
</androidx.constraintlayout.widget.ConstraintLayout>